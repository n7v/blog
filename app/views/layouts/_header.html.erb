<header>
  <%= link_to image_tag("logo.png", :alt => "Логотип", :class => "round"), root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Главная", root_path %></li>
      <% if signed_in?(:user) %>
        <li><%= link_to "Добавить запись", new_post_path %> </li>
        <li><%= link_to "Профиль", current_user %></li>
        <li><%= link_to "Настройки", edit_user_registration_path %></li>
        <li><%= link_to "Пользователи", users_path %></li>
        <li><%= link_to "Выход", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Вход", new_user_session_path %></li>
        <li><%= link_to "Регистрация", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</header>